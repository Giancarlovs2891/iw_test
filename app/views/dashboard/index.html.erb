<%= render "projects/form" %>

<h3>Tasks list</h3>

<div class="row">

    <div class="col-lg-12">

      <ul class="list-group" id="tasks-box">
        <% @tasks.each do |task| %>
          <li class="list-group-item">
            <span class="badge time-control pointer-cursor" id="<%= task.id %>"><i id="btn-<%= task.id %>">play</i></span>
            <span class="badge no-bg-color"><i><%= Time.at(task.total_time).utc.strftime("%H:%M:%S") %></i></span>
            <span class="badge no-bg-color"><%= task.start_count %></span>
            <%= task.name %> - <%= task.project_id %>
          </li>
        <% end %>

      </ul>

    </div>

  </div>
