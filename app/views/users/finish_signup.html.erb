<div class="row">
  <div class="col-lg-12">
    <h1 class="text-center">Confirm your Email</h1>
  </div>
</div>

<%= form_for(current_user, as: 'user', url: finish_signup_path(current_user)) do |f| %>
  <% if @show_errors && current_user.errors.any? %>
    <h2>Errores encontrados:</h2>
    <ul>
      <% current_user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>
  <br>
  <hr>

  <div class="row">
    <div class="col-lg-4 col-sm-4 col-lg-offset-4 col-sm-offset-4">
      <div class="form-group">
        <%= f.label :email %>
        <%= f.text_field :email, autofocus: true, value: '', placeholder: 'Example: email@me.com', class: "form-control" %>
      </div>
    </div>
  </div>
  <br>
  <div class="row">
    <div class="col-lg-4 col-sm-4 col-lg-offset-4 col-sm-offset-4">
      <div class="form-group">
        <%= f.submit 'Confirm', class: "btn btn-info form-control" %>
      </div>
    </div>
  </div>


<% end %>
