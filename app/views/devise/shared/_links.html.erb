
<div class="row">
  <div class="col-lg-4 col-sm-4 col-lg-offset-4 col-sm-offset-4">
    <div class="form-group">
      <%- if devise_mapping.omniauthable? %>
        <%- resource_class.omniauth_providers.each do |provider| %>
          <%= link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class: "btn btn-info form-control text-white" %><br />
        <% end -%>
      <% end -%>
    </div>
  </div>
</div>
